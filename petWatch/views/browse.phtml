    <!-- JavaScript for enhanced mobile experience -->
    <script>
        // 列滚动功能
        let currentColumn = 0;
        const visibleColumns = 6;

        function scrollColumns(direction) {
            const table = document.querySelector('.table-responsive');
            if (!table) return;

            const allColumns = table.querySelectorAll('thead th').length;

            currentColumn += direction;

            if (currentColumn < 0) currentColumn = 0;
            if (currentColumn > allColumns - visibleColumns) currentColumn = allColumns - visibleColumns;

            const scrollPosition = currentColumn * 120;
            table.scrollLeft = scrollPosition;
        }

        // 移动端筛选面板切换
        document.addEventListener('DOMContentLoaded', function() {
            const filterToggle = document.querySelector('.filter-toggle');
            const filterPanel = document.querySelector('.filter-panel .panel-body');

            if (filterToggle && filterPanel) {
                filterToggle.addEventListener('click', function() {
                    if (filterPanel.style.display === 'none') {
                        filterPanel.style.display = 'block';
                        filterToggle.textContent = '✕';
                    } else {
                        filterPanel.style.display = 'none';
                        filterToggle.textContent = '☰';
                    }
                });

                // 初始状态：移动端隐藏筛选面板
                if (window.innerWidth < 768) {
                    filterPanel.style.display = 'none';
                    filterToggle.textContent = '☰';
                }
            }

            // 防止iOS缩放
            const inputs = document.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.fontSize = '16px';
                });
            });
        });

        // 窗口大小改变时的处理
        window.addEventListener('resize', function() {
            const filterToggle = document.querySelector('.filter-toggle');
            const filterPanel = document.querySelector('.filter-panel .panel-body');

            if (filterToggle && filterPanel) {
                if (window.innerWidth >= 768) {
                    filterPanel.style.display = 'block';
                    filterToggle.style.display = 'none';
                } else {
                    filterToggle.style.display = 'inline-block';
                }
            }
        });
    </script>

