    <!-- JavaScript for column scrolling -->
    <script>
        let currentColumn = 0;
        const visibleColumns = 6; // Number of columns visible at once

        function scrollColumns(direction) {
            const table = document.querySelector('.table-responsive');
            const allColumns = table.querySelectorAll('thead th').length;

            currentColumn += direction;

            // Ensure we don't scroll beyond boundaries
            if (currentColumn < 0) currentColumn = 0;
            if (currentColumn > allColumns - visibleColumns) currentColumn = allColumns - visibleColumns;

            // Calculate scroll position
            const scrollPosition = currentColumn * 120; // Approximate column width

            table.scrollLeft = scrollPosition;
        }
    </script>

